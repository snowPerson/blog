
{{#section 'link'}}
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.3.1/css/swiper.min.css">
<style type="text/css">
	html {
		height: 100%;
	}
	body {
		margin: 0;
		height: 100%;
		background: #000;
	}

	.swiper-container {
		height: 100%;
	}

	.swiper-slide {
		height: 100%;
		width: 100%;
		display: table;
		position: relative;
	}
	
	.table-wrap {
		display: table-cell;
		vertical-align: middle;
		*position: absolute;
		*top: 50%;
		*left: 50%;
	}

	img {
		max-height: 100%;
		max-width: 100%;
		display: block;
		*position: absolute;
		*top: 50%;
		*left: 50%;
	}
</style>
{{/section}}

<div class="swiper-container">
    <div class="swiper-wrapper" id="contant"></div>
</div>

{{#section 'script'}}
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/3.3.1/js/swiper.jquery.min.js"></script>
	<script type="text/javascript">
		var arr = [];

		for( var i=1; i<=313; i++ ) {
			arr.push('./img/photo/'+ paddingZero(i) +'.jpg');
		}

		var con = '';
		arr.forEach(function(el, i) {
			con += '<div class="swiper-slide">\
			            <div class="table-wrap">\
			            	<img data-src="'+ el +'" class="swiper-lazy">\
			            </div>\
			        </div>';
		});

		document.getElementById('contant').innerHTML = con;
		$('title').html('张家界-凤凰 回忆之旅');
		var mySwiper = new Swiper('.swiper-container', {
			loop: true,
			autoplay: 5000,
			lazyLoading: true,
			lazyLoadingOnTransitionStart: true
		});

		function paddingZero(num) {
			num += '';
			if( num.length == 1 ) {
				num = '000' + num;
			} else if( num.length == 2 ) {
				num = '00' + num;
			} else if( num.length == 3 ) {
				num = '0' + num;
			}

			return num;
		}
	</script>
{{/section}}